<%= javascript_include_tag "storages" %>
<div class="main_tit"><h1>库存列表</h1></div>
<div class="main_con">
  <div class="toolbar">
    <div class="searchBox">
      <div class="selectBox">
        <span>商品类别</span>
        <div class="openDownIcon"></div>
        <select>
          <option value="0">全部</option>
          <% @mat_type.each do |mt| %>
            <option value="<%= mt.id %>"><%= mt.name %></option>
          <% end %>
        </select>
      </div>
      <input type="text" value="商品名称" />
      <input type="text" value="条形码" />
      <button class="orangeBtn">查询</button>
    </div>
  </div>

  <div style="padding-bottom: 80px;">
    <table class="table1">
      <tr>
        <th>条形码</th>
        <th>商品名称</th>
        <th>商品类别</th>
        <th>单位</th>
        <th>规格</th>
        <th>成本价</th>
        <th>零售价</th>
        <th>库存量</th>
        <th>盘点核数</th>
        <th>备注</th>
        <th>操作</th>
      </tr>
      <% @materials.each do |m| %>
        <tr>
          <td><%= m.code %></td>
          <td><%= m.name %></td>
          <td><%= m.cname %></td>
          <td><%= m.unit %></td>
          <td><%= m.standard %></td>
          <td><%= m.t_price.nil? ? 0 : m.t_price.round(2) %></td>
          <td><%= m.sale_price.nil? ? 0 : m.sale_price.round(2) %></td>
          <td><%= m.storage.nil? ? 0 : m.storage.round(2) %></td>
          <td><%= m.check_num.nil? ? 0 : m.check_num.round(2) %></td>
          <td><%= m.remark %></td>
          <td>
            <div class="moreBox">
              <button class="more" title="详细"></button>
              <div class="moreList">
                <ul>
                  <span><li>备注</li></span>
                  <li>编辑</li>
                  <li>核实</li>
                  <li>设置库存预警</li>
                  <li>忽略</li>
                </ul>
              </div>
            </div>
            <button class="delete" title="删除"></button>
          </td>
        </tr>
      <% end if @materials %>
    </table>
  </div>
</div>

<div class="second_box" id="new_material">
  <%= render "new" %>
</div>